<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.tibco.bw</groupId>
    <artifactId>tibco.bwce.sample.binding.rest.BookStore.application.parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>..\tibco.bwce.sample.binding.rest.BookStore.application.parent</relativePath>
  </parent>
  <artifactId>tibco.bwce.sample.binding.rest.BookStore.application</artifactId>
  <packaging>bwear</packaging>
  <properties>
    <docker.property.file>docker-dev.properties</docker.property.file>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>com.tibco.plugins</groupId>
        <artifactId>bw6-maven-plugin</artifactId>
        <version>1.2.1</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0.0</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <files>
            <file>${docker.property.file}</file>
          </files>
        </configuration>
      </plugin>
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <version>0.14.2</version>
        <configuration>
          <skip>false</skip>
          <dockerHost>${bwdocker.host}</dockerHost>
          <certPath>${bwdocker.certPath}</certPath>
          <images>
            <image>
              <alias>${bwdocker.containername}</alias>
              <name>${docker.image}</name>
              <build>
                <from>${bwdocker.from}</from>
                <maintainer>${bwdocker.maintainer}</maintainer>
                <assembly>
                  <basedir>/</basedir>
                  <descriptorRef>artifact</descriptorRef>
                </assembly>
                <tags>
                  <tag>latest</tag>
                </tags>
                <ports>
                  <port>8080</port>
                </ports>
              </build>
              <run>
                <namingStrategy>alias</namingStrategy>
              </run>
            </image>
          </images>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
